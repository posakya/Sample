<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="10dp"
    android:descendantFocusability="blocksDescendants"
    tools:context="com.example.roshan.berlin.home.Menu">

    <RelativeLayout
        android:background="#ffff"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:layout_margin="5dp"
            android:layout_alignParentLeft="true"
            android:layout_width="120dp"
            android:layout_height="135dp"
            android:id="@+id/item_image"
            android:scaleType="centerCrop"
            android:src="@drawable/chicken_vindaloo"/>

        <TextView
            android:paddingTop="5dp"
            android:text="Title"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="@dimen/item_name"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@+id/item_image"
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_below="@+id/item_title"
            android:id="@+id/item_desc"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignRight="@+id/item_image"
            android:paddingLeft="5dp"
            android:maxLines="5"
            android:ellipsize="end"
            android:textSize="@dimen/desc_size"
            android:textColor="@android:color/black"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
            android:layout_toRightOf="@+id/item_image"
            android:layout_toEndOf="@+id/item_image" />

        <Button
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white"
            android:text="View Items"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/button_round"
            android:id="@+id/btn_view_item"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/item_desc"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>



</android.support.v7.widget.CardView>
